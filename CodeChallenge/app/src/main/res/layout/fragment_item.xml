<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:background="@drawable/item_list_background"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_thumb"
        android:layout_width="@dimen/item_thumb"
        android:layout_height="@dimen/item_thumb"
        android:layout_gravity="center|start"
        android:src="@drawable/ic_default_user" />

    <TextView
        android:id="@+id/item_first_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/item_margin_start"
        android:layout_weight="1"
        android:gravity="center|start"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="Nombre" />

    <TextView
        android:id="@+id/item_last_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|start"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="Apellido" />
</LinearLayout>
